            <%= song_index %>.<%=song.name%> | <%=song.album.present? ? song.album : "Album: Chưa biết tên" %> | <%=song.singer%></option>
            <% song_index += 1 %>
          <%end%>
        </select>
      </div>
    </div>
  </div>
