    <div class="row">
      <div class="fadeInDown styled-select">
        <select id="ML" name="MusicList" size="<%=size%>" class="col-md-12 wow fadeInDown" style="padding:0px" onclick="MusicLoad(this.selectedIndex);">
          <% @songs.each do |song| %>
